<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.MemoMemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--    <style name="Base.Theme.MemoMemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/pink_dark_custom</item>
        <item name="colorOnSurface">@color/pink_dark_custom</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:textSize">12sp</item>
        <item name="android:windowTranslucentStatus">true</item>
<!--        <item name="android:fontFamily">@font/gmarket_sans_medium</item>-->
        <item name="android:itemTextAppearance">@style/MenuTextStyle.MemoMemo</item>
    </style>

    <style name="Theme.MemoMemo" parent="Base.Theme.MemoMemo" />

    <style name="Theme.MemoMemo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MemoMemo.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <!--    <style name="Theme.MemoMemo.PopUpOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>-->

    <style name="RedButtonThemeOverlay">
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="BlueButtonThemeOverlay">
        <item name="colorPrimary">@color/blue</item>
    </style>

    <style name="YellowButtonThemeOverlay">
        <item name="colorPrimary">@color/yellow</item>
    </style>

    <style name="PinkButtonThemeOverlay">
        <item name="colorPrimary">@color/blue</item>
    </style>
    <!--    <style name="GrayButtonThemeOverlay">-->
    <!--        <item name="colorPrimary">@color/gray_light</item>-->
    <!--    </style>-->
    <!--    <style name="BlackButtonThemeOverlay">-->
    <!--        <item name="colorPrimary">@color/black</item>-->
    <!--    </style>-->

    <!--    <style name="TabLayout.MemoMemo" parent="Widget.Design.TabLayout" >-->
    <style name="TabLayout.MemoMemo" parent="Widget.MaterialComponents.TabLayout.Colored">
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabIndicatorHeight">6dp</item>
        <item name="tabTextAppearance">@style/BasicTextStyle.MemoMemo</item>
    </style>

    <style name="BasicTextStyle.MemoMemo" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuTextStyle.MemoMemo" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:fontFamily">@font/gmarket_sans_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
